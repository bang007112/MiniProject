@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<BlogInfo>
<section class="intro container">
    <span class="intro-blog ml-5 h4">A personal <a href="#about" class="">blog</a></span>
    <h1 class="mx-auto text-center" style="font-size: 13vw; color: #444444;">B<span>Blo</span>g.</h1>
    <span class="intro-info float-right mb-5 mt-4 h3" style="color: #919191;">I am a Blogger & Photographer Based in
        VietNam</span>
</section>

<section class="container-fluid row m-5 p-5">
    @foreach (var item in Model)
    {
        <div class="main-Blog  row">
            <div class="col-md-7 mt-5"><img class="imageBlog" width="100%" height="100%" src="@item.BlogImage" alt=""></div>
            <div class="col-md-5 mt-5" style="line-height: 200%;">
                <span class="h5"><i class="fa fa-user me-1"></i> Admin <i class="fa fa-calendar me-1"></i>
                    @item.ReleaseDate.ToShortDateString() <i class="fa fa-comment me-1"></i> Comment</span>
                <h1 class="font-weight-bold" style="font-size: 4vw"><a asp-controller="Blog" asp-action="BlogDetail"
                    asp-route-blogID="@item.BlogID">@item.BlogTitle</a></h1>
                <a class="btn-custom h5" style="text-decoration: none;" asp-controller="Blog" asp-action="BlogDetail"
                asp-route-blogID="@item.BlogID">LEARN MORE</a><i class="fa fa-arrow-right text-primary"></i>
                <i class="fas fa-heart mx-2 h4" style="color: #FF1493;"></i>
            </div>
        </div>
    }

</section>
