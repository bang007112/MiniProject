@model User
@{
  ViewData["Title"] = "Login";
}
<div class="Login">
  <h2 class="manageTile text-center">Login</h2>
  <section class="vh-100 ">
    <div class="container py-5 h-100">
      <div class="row d-flex align-items-center justify-content-center h-100 box-login">
        <div class="col-md-8 col-lg-7 col-xl-6">
          <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg" class="img-fluid"
            alt="Phone image">
        </div>
        <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
          <form asp-controller="Home" asp-action="Login">
            <!-- Email input -->
            <div class="form-group form-outline mb-4">
              <label class="form-label" for="username">UserName</label>
              <input type="text" id="username" asp-for="Username" class="form-control form-control-lg" />
              
              <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <!-- Password input -->
            <div class="form-outline mb-4">
              <label class="form-group form-label" for="form1Example23">Password</label>
              <input type="password" id="Password" asp-for="Password" asp class="form-control form-control-lg" />
              <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-around align-items-center mb-4">
              <!-- Checkbox -->
              <a asp-action="CreateUser" asp-controller="User">Register?</a>
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-lg btn-block">Sign in</button>

            <div class="divider d-flex align-items-center my-4">
              <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
            </div>

            <a class="btn btn-primary btn-lg btn-block" asp-controller="Home" asp-action="Facebook"
              style="background-color: #3b5998" role="button">
              <i class="fab fa-facebook-f me-2"></i>Continue with Facebook
            </a>
          </form>
        </div>
      </div>
    </div>
  </section>
</div>
