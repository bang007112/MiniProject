@model User

<section class="vh-150 UserManage" style="background-color: #f4f5f7;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-12 mb-4 mb-lg-0">
        <div class="card mb-3" style="border-radius: .5rem;">
          <div class="row g-0">
            <div class="col-md-5 gradient-custom text-center text-white" style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
              <img
                src="@Model.Avatar"
                alt="Avatar"
                class="img-fluid my-5"
                style="width: 150px; border-radius: 50%;"
              />
              <form id="myForm" asp-action="UpdateAvatar" method="post" enctype="multipart/form-data">
              <label for="fileInput">
                       <i style="border-radius:50% ;border: solid 2px white" class="font-weight-bold h4 p-2 fas fa-plus"></i>
              </label>
                <input id="fileInput" style="display: none;" class="file-info mb-3" type="file" accept=".png,.jpg" name="imageFile">
              </form>
              
              <h5>@Model.Username</h5>
              <p>Web Designer</p>
              <i class="far fa-edit mb-5"></i>
            </div>
            <div class="col-md-7">
              <div class="card-body p-4">
                <h3>Information</h3>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                  <div class="col-12 mb-3">
                    <h3>Email</h3>
                    <p class="text-muted">@Model.Email</p>
                  </div>
                </div>
                <h3>Projects</h3>
                <hr class="mt-0 mb-4">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.getElementById("fileInput").onchange=function(){
    swal({
      title: "Update Avatar?",
      text: "You will have a new avatar",
      icon: "warning",
      buttons: true,
      dangerMode: true,
    })
    .then((willUpdate) => {
      if (willUpdate) {
        swal("You have updated your avatar successfully!", {
          icon: "success",
        });
      } else {
        swal("you have failed to update your avatar!");
      }
      }).then(() => {
    // Makes .then() return a rejected promise
    document.getElementById("myForm").submit();
  });
  };

</script>