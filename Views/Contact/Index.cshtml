@model IEnumerable<Contact>
<div class="container">
    <h3 class="text-center">User Manament</h3>
    <a asp-controller="Home" asp-action="Logout" class="btn btn-outline-danger">Logout</a>
    <hr>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>

                <th>Email</th>

                <th>Subject</th>
                
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.Subject</td>
                    <td>@item.Status</td>
                    <td> <a asp-area="" asp-controller="User" asp-action="Delete" asp-route-Id="@item.Name"
                        class="btn btn-danger">Delete</a> </td>
                </tr>
            }
        </tbody>
    </table>
</div>